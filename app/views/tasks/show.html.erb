      <div class="task">
        <input type="checkbox" id="scales" name="scales" checked>
        <%= @tasks.details %>
        <%= @tasks.completed %>
      </div>
    <% else %>
      <div class="task" class="fa fa-trash" aria-hidden="true">
        <input type="checkbox" id="scales" name="scales">
        <%= @tasks.details %>
        <%= @tasks.completed %>
      </div>
      <% end %>
